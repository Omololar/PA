    Layout = "~/Views/Shared/_Layout.cshtml";
}





<section class="hero-area hero-post-slides owl-carousel">
    <div class="single-hero-slide bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url(../../Content/img/rccggood.png);">

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="hero-slides-content">
                        <h2 data-animation="fadeInUp" data-delay="100ms">Welcome To RCCG</h2>
                        <p data-animation="fadeInUp" data-delay="300ms">Praise Assembly</p>
                        <a href="@Url.Action("Contact", "Home")" class="btn crose-btn" data-animation="fadeInUp" data-delay="500ms">Worship With Us</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Announcement-->
    @foreach (var item in Model.News.OrderBy(item => item.DueDate))
    {
