    {
        if (ev.EventDate.Month <= DateTime.Now.Month)
        {

            <div class="single-hero-slide bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url(@Url.Content("~/Content/images/")@ev.PictureThumbnailUrl);">


